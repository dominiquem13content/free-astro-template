---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/sections/Header.astro';
import Footer from '../../../components/sections/Footer.astro';
import PostCard from '../../../components/ui/card/PostCard.astro';
import { supabase } from '../../../lib/supabase';

export async function getStaticPaths() {
  const { data: categories } = await supabase
    .from('categories')
    .select('slug');

  return (categories || []).map((cat) => ({ params: { category: cat.slug } }));
}

const { category } = Astro.params;

const { data: categoryData } = await supabase
  .from('categories')
  .select('*')
  .eq('slug', category)
  .single();

const { data: posts } = await supabase
  .from('posts')
  .select('*, author:authors(name, slug), category:categories(name, slug)')
  .eq('category_id', categoryData?.id)
  .eq('published', true)
  .order('published_at', { ascending: false });

const meta = {
  title: categoryData?.name || 'Category',
  description: categoryData?.description || 'Posts in this category',
};
---
<html lang="en" data-theme="dark" class="dark">
  <head>
    <BaseHead title={`${meta.title} - Category`} description={meta.description} />
    <link rel="alternate" type="application/rss+xml" title={`Category: ${category} feed`} href={`/rss/category/${category}.xml`} />
  </head>
  <body>
    <Header />
    <main class="mx-auto max-w-6xl px-4 py-10 space-y-6">
      <div class="flex items-center justify-between gap-3">
        <h1 class="text-3xl font-bold">{meta.title}</h1>
        <a class="sw-btn-sm" href={`/rss/category/${category}.xml`}>Subscribe</a>
      </div>
      <p class="text-[color:var(--color-text-muted)]">{meta.description}</p>
      <div class="blog-grid">
        {posts.map((p) => (
          <PostCard post={p} />
        ))}
      </div>
    </main>
    <Footer />
  </body>
</html>


