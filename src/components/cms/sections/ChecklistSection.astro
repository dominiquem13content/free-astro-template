---
import type { ChecklistData } from '../../../lib/cms-types';

interface Props {
  title?: string | null;
  data: ChecklistData;
}

const { title, data } = Astro.props;
const items = data.items || [];
---

{items.length > 0 && (
  <section class="cms-checklist my-8">
    {title && <h2 class="text-3xl font-bold mb-6">{title}</h2>}

    <ul class="space-y-3">
      {items.map(item => (
        <li class="flex items-start">
          <svg
            class="w-6 h-6 text-green-500 mr-3 flex-shrink-0 mt-0.5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <span class="text-lg">{item}</span>
        </li>
      ))}
    </ul>
  </section>
)}
