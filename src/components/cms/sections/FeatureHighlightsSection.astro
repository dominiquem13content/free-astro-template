---
import type { FeatureHighlightsData } from '../../../lib/cms-types';

interface Props {
  title?: string | null;
  data: FeatureHighlightsData;
}

const { title, data } = Astro.props;
const features = data.features || [];
---

{features.length > 0 && (
  <section class="cms-feature-highlights my-12">
    {title && <h2 class="text-3xl font-bold mb-8 text-center">{title}</h2>}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="feature-card p-6 border border-gray-200 rounded-lg hover:shadow-lg transition-shadow">
          {feature.icon && (
            <div class="mb-4 text-4xl">{feature.icon}</div>
          )}
          {!feature.icon && (
            <div class="mb-4">
              <svg
                class="w-12 h-12 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"
                />
              </svg>
            </div>
          )}
          <h3 class="text-xl font-bold mb-3">{feature.title}</h3>
          <p class="text-gray-700 leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </section>
)}
