---
import type { NumberedStepsData } from '../../../lib/cms-types';
import { marked } from 'marked';

interface Props {
  title?: string | null;
  data: NumberedStepsData;
}

const { title, data } = Astro.props;
const steps = data.steps || [];
---

{steps.length > 0 && (
  <section class="cms-numbered-steps my-12">
    {title && <h2 class="text-3xl font-bold mb-8">{title}</h2>}

    <div class="space-y-8">
      {steps.map((step, index) => (
        <div class="flex gap-6">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 rounded-full bg-blue-600 text-white flex items-center justify-center text-xl font-bold">
              {index + 1}
            </div>
          </div>
          <div class="flex-1 pt-1">
            <h3 class="text-2xl font-bold mb-3">{step.title}</h3>
            <div class="prose prose-lg max-w-none" set:html={marked(step.content)} />
          </div>
        </div>
      ))}
    </div>
  </section>
)}
