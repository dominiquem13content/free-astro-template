---
import PostCard from '../ui/card/PostCard.astro';

interface Props {
  posts: any[];
  title?: string;
}

const { posts = [], title = 'All Articles' } = Astro.props as Props;
---

<section class="space-y-6">
  <h2 class="text-3xl font-bold">{title}</h2>
  <div class="blog-grid">
    {posts.map((post) => (
      <PostCard post={post} />
    ))}
  </div>
</section>


