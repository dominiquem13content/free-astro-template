---
import FormattedDate from '../../FormattedDate.astro';
import { slugifyTag as slugify } from '../../../lib/slug';

interface Props { post: any; readingTimeMin?: number }
const { post, readingTimeMin = 0 } = Astro.props as Props;
---
<div class="grid grid-cols-1 md:grid-cols-3 gap-5 md:gap-6 items-stretch relative">
  {post.hero_image && (
    <div class="md:col-span-1 relative overflow-hidden rounded-lg">
      <div class="aspect-[16/9] w-full min-h-featured">
        <img class="w-full h-full object-cover" src={post.hero_image} alt={post.title} />
      </div>
    </div>
  )}
  <div class="md:col-span-2 space-y-2 md:space-y-3">
    <div class="flex items-center gap-2 text-xs uppercase tracking-wide text-[color:var(--color-text-muted)]">
      <span class="sw-tag border border-[color:var(--color-border-light)]"><span class="text-[color:var(--accent)]">★</span> Featured</span>
    </div>
    <h3 class="text-2xl md:text-3xl font-bold text-[color:var(--color-text-primary)]">{post.title}</h3>
    {post.excerpt && <p class="text-[color:var(--color-text-secondary)]">{post.excerpt}</p>}
    <div class="flex items-center gap-3 text-sm text-[color:var(--color-text-muted)]">
      <FormattedDate date={new Date(post.published_at || post.created_at)} />
      <span>•</span>
		<a href={`/blog/author/${post.author?.slug || 'unknown'}/`} class="hover:text-[color:var(--accent)]">{post.author?.name || 'Unknown Author'}</a>
      {readingTimeMin > 0 && (<>
        <span>•</span>
        <span class="flex items-center gap-1">
          <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <circle cx="12" cy="12" r="9"/>
            <path d="M12 7v5l3 3"/>
          </svg>
          {readingTimeMin} min read
        </span>
      </>)}
    </div>
  </div>
  <a href={`/blog/${post.slug}/`} class="stretched-link" aria-label={post.title}></a>
</div>


