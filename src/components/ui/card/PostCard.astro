---
import FormattedDate from '../../FormattedDate.astro';
import { calculateReadingTimeFromMarkdown } from '../../../lib/reading';
import { slugifyTag as slugify } from '../../../lib/slug';

interface Props { post: any }
const { post } = Astro.props as Props;

let readingTimeMin = 0;
try {
  readingTimeMin = calculateReadingTimeFromMarkdown(post.content || post.excerpt || '');
} catch {}
---

<article class="card-surface p-4 h-full flex flex-col gap-3 relative">
  {post.hero_image && (
    <img width="640" height="360" src={post.hero_image} alt={post.title} />
  )}
  <h3 class="text-xl font-semibold text-[color:var(--color-text-primary)]">{post.title}</h3>
  <p class="text-[color:var(--color-text-muted)]">{post.excerpt}</p>
  <div class="flex flex-col text-sm text-[color:var(--color-text-muted)] gap-1">
    <div class="flex items-center gap-1">
		<a href={`/blog/author/${post.author?.slug || 'unknown'}/`} class="hover:text-[color:var(--accent)] interactive-link">{post.author?.name || 'Unknown Author'}</a>
    </div>
    <div class="flex items-center gap-1">
      <FormattedDate date={new Date(post.published_at || post.created_at)} />
    </div>
    {readingTimeMin > 0 && (
      <div class="flex items-center gap-1">
        <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="9"/>
          <path d="M12 7v5l3 3"/>
        </svg>
        {readingTimeMin} min read
      </div>
    )}
  </div>
  <a href={`/blog/${post.slug}/`} class="stretched-link" aria-label={post.title}></a>
</article>


