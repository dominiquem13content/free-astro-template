---
export const prerender = false;

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/sections/Header.astro';
import Footer from '../components/sections/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { signIn, setAuthCookies, getCurrentUser } from '../lib/auth';

const currentUser = await getCurrentUser(Astro.cookies);

if (currentUser) {
  return Astro.redirect('/cms-admin');
}

let errorMessage = '';
let successMessage = '';

const searchParams = new URL(Astro.request.url).searchParams;
const urlError = searchParams.get('error');

if (urlError === 'inactive') {
  errorMessage = 'Your account has been deactivated. Please contact an administrator.';
} else if (urlError === 'unauthorized') {
  errorMessage = 'You do not have permission to access the admin area.';
} else if (urlError === 'session_expired') {
  errorMessage = 'Your session has expired. Please log in again.';
}

if (searchParams.get('registered') === 'true') {
  successMessage = 'Registration successful! Please log in with your credentials.';
}

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email')?.toString() || '';
    const password = formData.get('password')?.toString() || '';

    if (!email || !password) {
      errorMessage = 'Email and password are required.';
    } else {
      const { data, error } = await signIn(email, password);

      if (error) {
        errorMessage = 'Invalid email or password.';
      } else if (data.session) {
        setAuthCookies(Astro.cookies, data.session.access_token, data.session.refresh_token);
        return Astro.redirect('/cms-admin');
      }
    }
  } catch (error) {
    console.error('Login error:', error);
    errorMessage = 'An unexpected error occurred. Please try again.';
  }
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Login - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="container mx-auto px-4 py-12 max-w-md">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold mb-6 text-center">Login to Admin</h1>

        {errorMessage && (
          <div class="mb-4 p-4 bg-red-100 dark:bg-red-900/30 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-300 rounded">
            {errorMessage}
          </div>
        )}

        {successMessage && (
          <div class="mb-4 p-4 bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-300 rounded">
            {successMessage}
          </div>
        )}

        <form method="POST">
          <div class="mb-4">
            <label for="email" class="block text-sm font-medium mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              autocomplete="email"
              class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700"
            />
          </div>

          <div class="mb-6">
            <label for="password" class="block text-sm font-medium mb-2">
              Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              autocomplete="current-password"
              class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700"
            />
          </div>

          <button
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors"
          >
            Sign In
          </button>
        </form>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Don't have an account?
            <a href="/register" class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-medium">
              Register here
            </a>
          </p>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
